<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <style>
      body {
        display: flex;
        flex-wrap: wrap;
      }
      article {
        background: #604f4f;
        width: 180px;
        height: 300px;
        margin: 0 1em 1em 0;
        color: #dfcbcb;
        padding: 10px;
        position: relative;
      }
      article img {
        max-width: 100%;
      }
      article div {
        position: absolute;
        bottom: 10px;
        left: 10px;
        right: 10px;
        text-overflow: ellipsis;
        overflow: hidden;
        max-height: 96px;
        background: #604f4f;
        padding-top: 10px;
      }
    </style>
  </head>
  <body>
    <% names.forEach(name => { %>
    <article>
      <a href="<%= name %>"><img src="<%= name %>/cover" /></a>
      <div><%= name %></div>
    </article>
    <% }) %>
  </body>
</html>
